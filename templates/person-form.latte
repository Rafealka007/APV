<form method="post">
    <div class="form-row">
        <!-- First name -->
        <div class="col-sm-3 form-group">
            <label for="first_name">First name</label>
            <input id="first_name" class="form-control" type="text" name="first_name" placeholder="First name" value="{$formData['first_name']}" required>
        </div>
        <!-- Last name -->
        <div class="col-sm-3 form-group">
            <label for="last_name">Last name</label>
            <input class="form-control" id="last_name" type="text" name="last_name" placeholder="Last name" value="{$formData['last_name']}" required>
        </div>
        <!-- Nickname -->
        <div class="col-sm-3 form-group">
            <label for="nickname">Nickname</label>
            <input class="form-control" id="nickname" type="text" name="nickname" placeholder="Nickname" value="{$formData['nickname']}" required>
        </div>
    </div>

    <div class="form-row">
        <!-- Gender -->
        <div class="col-sm-3">
            <label for="height">Gender</label>
            <select class="form-control" type="text" name="gender" value="{$formData['gender']}" required>
                <option value="male" selected>Male</option>
                <option value="female">Female</option>
            </select>
        </div>
        <!-- Height -->
        <div class="col-sm-3">
            <label for="height">Height</label>
            <input class="form-control" id="height" min=10 type="number" name="height" placeholder="Height" value="{$formData['height']}">
        </div>
        <!-- Birth day -->
        <div class="col-sm-3">
            <label for="birth_day">Birthday</label>
            <input class="form-control" id="birth_day" type="date" name="birth_day" placeholder="Date of birth" value="{$formData['birth_day']}" required>
            <span class="validity"></span>
        </div>
    </div>
    <div class="form-row">
        <!-- Street  name -->
        <div class="col-sm-3 form-group">
            <label for="street_name">Street name</label>
            <input id="street_name" class="form-control" type="text" name="street_name" placeholder="Street name" value="{$formData['street_name']}">
        </div>
        <!-- Street number -->
        <div class="col-sm-2 form-group">
            <label for="street_number">Street number</label>
            <input id="street_number" class="form-control" type="number" name="street_number" placeholder="Street number" value="{$formData['street_number']}">
        </div>

        <!-- City -->
        <div class="col-sm-2 form-group">
            <label for="city">City</label>
            <input id="city" class="form-control" type="text" name="city" placeholder="City" value="{$formData['city']}">
        </div>

        <!-- ZIP -->
        <div class="col-sm-2 form-group">
            <label for="zip">ZIP</label>
            <input id="zip" class="form-control" type="text" name="zip" placeholder="ZIP" value="{$formData['zip']}">
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-success">
        <span class="fa fa-plus"></span> Add/Edit
    </button>
</form>